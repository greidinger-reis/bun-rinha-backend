{
  "name": "bun-rinha-be",
  "version": "1.0.50",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/app.ts",
    "start": "bun build --outdir=dist --target=bun src/app.ts && bun --bun run dist/app.js ",
    "db:introspect": "drizzle-kit introspect:pg",
    "db:generate": "drizzle-kit generate:pg",
    "clean": "rm -rf dist && rm -rf node_modules"
  },
  "dependencies": {
    "drizzle-orm": "^0.28.5",
    "elysia": "latest",
    "hyperid": "^3.1.1",
    "postgres": "^3.3.5"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.19.13",
    "typescript": "^5.2.2"
  },
  "module": "src/app.ts"
}